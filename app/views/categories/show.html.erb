<div class="row m-0 mb-n2">
  <div class="col-12">
    <h1 class="text-center text-uppercase font-weight-bold text-primary"><%= @category.Name %></h1>
  </div>
  <div class="col-12 p-0">
    <% if @articles.size >= 1 %>
      <%= render "article", category: @category, articles: @articles, id: "article" %>
    <% else %>
      <p>
        <span class="iconify" data-icon="ri:error-warning-fill" data-inline="false"></span>
        <%= t("category.no_articles") %>
      </p>
    <% end %>
  </div>
</div>
